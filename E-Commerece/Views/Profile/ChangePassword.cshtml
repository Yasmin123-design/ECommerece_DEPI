@model User
<form asp-action="ChangePassword" method="post" class="user-form">
    <input type="hidden" asp-for="Id" />

    <h2 style="text-align:center">Change Password</h2>
    <div class="form-group">
        <label>Recent Password</label>
        <input name="RecentPassword" type="password" class="form-control" required />
    </div>

    <div class="form-group">
        <label>New Password</label>
        <input name="NewPassword" type="password" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Confirm Password</label>
        <input name="ConfirmNewPassword" type="password" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-info mt-3">
            @ViewBag.Message
        </div>
    }
</form>