
@model List<dynamic>
<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">

            <!-- section title -->
            <div class="col-md-12">
                <div class="section-title">
                    <h3 class="title">Top Rated</h3>
                </div>
            </div>
            <!-- /section title -->
            <!-- Products tab & slick -->
            <div class="col-md-12">
                <div class="row">
                    <div class="products-tabs">
                        <!-- tab -->
                        <div id="tab2" class="tab-pane fade in active">
                            @* data-nav="#slick-nav-2" *@
                            <div class="products-slick2" data-nav="#slick-nav-2">
                                @foreach (var product in Model)
                                {
                                    <!-- product -->
                                    <div class="product ">
                                        <div class="product-img">
                                            <img src="./img/@product.Product.Image" alt="" style="width: 100%; height: 200px; object-fit: cover;">
                                        </div>
                                        <div class="product-body">
                                            <p class="product-category">@product.Product.Category.Name</p>
                                            <h3 class="product-name"><a href="#">@product.Product.Name</a></h3>
                                            <h4 class="product-price">@product.Product.Price</h4>
                                            <div class="product-btns">
                                                <a onclick="addToWishlist(@product.Product.Id)" class="add-to-wishlist">
                                                    <i class="fa fa-heart-o"></i>
                                                    <span class="tooltipp"></span>
                                                </a>

                                                <a asp-action="QuickView" asp-controller="Product" asp-route-id="@product.Product.Id" class="add-to-compare">
                                                    <i class="fa fa-shopping-cart"></i>
                                                    <span class="tooltipp"></span>
                                                </a>

                                                <a asp-action="QuickView" asp-controller="Product" asp-route-id="@product.Product.Id" class="quick-view">
                                                    <i class="fa fa-eye"></i>
                                                    <span class="tooltipp"></span>
                                                </a>

                                            </div>
                                        </div>
                                        
                                    </div>
                                    <!-- /product -->
                                }
                            </div>
                            <div id="slick-nav-2" class="products-slick-nav"></div>
                        </div>
                        <!-- /tab -->
                    </div>
                </div>
            </div>
            <!-- /Products tab & slick -->
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->
