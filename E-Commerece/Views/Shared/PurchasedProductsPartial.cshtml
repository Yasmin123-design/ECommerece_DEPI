<style>
    .Pending {
        color: orange;
        font-weight: bold;
    }

    .Shipped {
        color: #2196F3;
        font-weight: bold;
    }

    .Delivered {
        color: #4CAF50;
        font-weight: bold;
    }

    .Cancelled {
        color: #F44336;
        font-weight: bold;
    }

</style>

<div class="table-container">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
        <h2>Orders as Customer</h2>
        <button class="button btn-primary" onclick="viewMore('AllPurchasedProducts')">View More</button>
    </div>
    <table class="table" id="purchasedTable">
        <thead>
            <tr>
                <th data-column="name">
                    <div class="header-content">
                        <span class="column-name">Items</span>
                        <div class="sort-arrows">
                            <span class="sort-up" onclick="sortTable('purchasedTable','name', 'asc')">
                                <i class="fas fa-arrow-up"></i>
                            </span>
                            <span class="sort-down" onclick="sortTable('purchasedTable','name', 'desc')">
                                <i class="fas fa-arrow-down"></i>
                            </span>
                        </div>
                    </div>
                </th>
                <th data-column="orderdate">
                    <div class="header-content">
                        <span class="column-name">Order Date</span>
                        <div class="sort-arrows">
                            <span class="sort-up" onclick="sortTable('purchasedTable','orderdate', 'asc')">
                                <i class="fas fa-arrow-up"></i>
                            </span>
                            <span class="sort-down" onclick="sortTable('purchasedTable','orderdate', 'desc')">
                                <i class="fas fa-arrow-down"></i>
                            </span>
                        </div>
                    </div>
                </th>
                <th data-column="deliverydate">
                    <div class="header-content">
                        <span class="column-name">Delivery Date</span>
                        <div class="sort-arrows">
                            <span class="sort-up" onclick="sortTable('purchasedTable','deliverydate', 'asc')">
                                <i class="fas fa-arrow-up"></i>
                            </span>
                            <span class="sort-down" onclick="sortTable('purchasedTable','deliverydate', 'desc')">
                                <i class="fas fa-arrow-down"></i>
                            </span>
                        </div>
                    </div>
                </th>
                <th data-column="status">
                    <div class="header-content">
                        <span class="column-name">Status</span>
                    </div>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>
                        <div class="product-items">
                            @foreach (var item in order.Items)
                            {
                                <span>@item.ProductItem.Product.Name</span>
                            }
                        </div>
                    </td>
                    <td>@order.OrderDate.ToString("dd MMM yyyy")</td>
                    <td>@order.ArrivalDate.ToString("dd MMM yyyy")</td>
                    <td class="@order.Status">@order.Status</td>
                </tr>
            }
        </tbody>
    </table>
</div>
