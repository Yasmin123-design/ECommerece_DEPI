        overflow-y: auto;
    }

    @@keyframes modalFadeIn {
        from {
            opacity: 0;
            transform: translate(-50%, -60%);
        }
        to {
            opacity: 1;
            transform: translate(-50%, -50%);
        }
    }

    .modal-content {
        padding: 25px;
        position: relative;
    }

    .close-button {
        position: absolute;
        top: 15px;
        left: 15px;
        font-size: 24px;
        color: #777;
        cursor: pointer;
        transition: all 0.2s;
        background: none;
        border: none;
