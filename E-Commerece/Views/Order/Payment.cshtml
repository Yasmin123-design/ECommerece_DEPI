<style>
    .payment-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 80vh;
        padding: 20px;
    }

    .payment-box {
        max-width: 600px;
        width: 100%;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

    .payment-card {
        margin-top: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border: none;
        border-radius: 10px;
        padding: 20px;
    }

    .payment-btn {
        padding: 10px 30px;
        font-size: 18px;
        width: 100%;
        margin: 5px 0;
    }

    .payment-btn-primary {
        background-color: #007bff;
        border: none;
    }

    .payment-btn-success {
        background-color: #28a745;
        border: none;
    }

        .payment-btn-primary:hover, .payment-btn-success:hover {
            opacity: 0.9;
        }

    .payment-title {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 1rem;
    }
    .payment-card-text {
        font-size: 1.1rem;
        color: #555;
        margin-bottom: 1rem;
    }

    .payment-btn i {
        margin-right: 8px; /* مسافة بين الأيقونة والنص */
    }
</style>

@model E_Commerece.ViewModels.PaymentVM
@{
    ViewData["Title"] = "Payment";
}

<div class="payment-container">
    <div class="payment-box text-center">
        <h2 class="payment-title">Payment</h2>
        <hr />
        <div class="mt-4">
            <form asp-action="CashOnDelivery" asp-controller="Order" method="post">
                <input type="hidden" asp-for="OrderId" />
                <input type="hidden" asp-for="Email" />
                <input type="hidden" asp-for="TotalPrice" />
                <button type="submit" class="btn payment-btn payment-btn-primary">
                    <i class="fas fa-truck"></i>Cash on Delivery
                </button>
            </form>

            <form asp-action="PayWithStripe" asp-controller="Order" method="post" class="mt-3">
                <input type="hidden" asp-for="OrderId" />
                <input type="hidden" asp-for="Email" />
                <input type="hidden" asp-for="TotalPrice" />
                <button type="submit" class="btn payment-btn payment-btn-success">
                    <i class="fas fa-credit-card"></i>Pay with Stripe
                </button>
            </form>
        </div>
    </div>
</div>