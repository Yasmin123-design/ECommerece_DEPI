<style>
    .wrapper {
        display: grid;
        place-items: center; /* توسيط المحتوى رأسيًا وأفقيًا */
        min-height: 100vh; /* يجعل العنصر يأخذ الارتفاع الكامل للشاشة */
    }

    .order-details {
        max-width: 600px;
        width: 100%;
        padding: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .section-title {
        margin-bottom: 20px;
    }

        .section-title .title {
            font-size: 24px;
            color: #333;
        }

    .order-summary {
        margin-bottom: 20px;
    }

    .order-col {
        display: flex;
        justify-content: space-between;
        padding: 10px 0;
        border-bottom: 1px solid #eee;
    }

        .order-col div {
            flex: 1;
            text-align: left;
        }

            .order-col div:last-child {
                text-align: right;
            }

    .order-products .order-col {
        padding: 5px 0;
    }

    .order-total {
        color: #e44d26;
        font-size: 18px;
    }

    .primary-btn {
        display: inline-block;
        padding: 10px 20px;
        background-color: #red;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .primary-btn:hover {
            background-color: #d1401f;
        }
</style>

<div class="wrapper">
    <div class="order-details">
        <div class="section-title text-center">
            <h3 class="title">Your Order</h3>
        </div>
        <div class="order-summary">
            <div class="order-col">
                <div><strong>PRODUCT</strong></div>
                <div><strong>TOTAL</strong></div>
            </div>
            <div class="order-products">
                @foreach (var product in Model.Items)
                {
                    <div class="order-col">
                        <div>@product.ProductItem.Product.Name</div>
                        <div>@product.Quantity * @product.ProductItem.Product.Price</div>
                    </div>
                }
            </div>
            <div class="order-col">
                <div>Shipping</div>
                <div><strong>FREE</strong></div>
            </div>
            <div class="order-col">
                <div><strong>TOTAL</strong></div>
                <div><strong class="order-total">@Model.TotalPrice</strong></div>
            </div>
        </div>
        <a href="/Order/Payment" class="primary-btn order-submit">Place order</a>
    </div>
</div>