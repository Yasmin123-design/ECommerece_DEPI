
<style>
    /* تنسيق عام لجعل المحتوى في منتصف الصفحة */
    .center-page {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 80vh; /* ارتفاع مناسب مع ترك مسافة للـ header والـ footer */
        margin-top: 50px; /* margin أعلى */
        margin-bottom: 50px; /* margin أسفل */
    }

    /* تنسيق الـ alert */
    .alert {
        border-radius: 15px; /* حواف مدورة */
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* ظل خفيف */
        transition: transform 0.3s ease, box-shadow 0.3s ease; /* تأثيرات حركية */
        padding: 20px; /* padding داخلي */
        text-align: center; /* توسيط النص */
    }

        .alert:hover {
            transform: translateY(-5px); /* تحريك الصندوق لأعلى عند المرور */
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2); /* زيادة الظل عند المرور */
        }

    h2 {
        font-size: 2.5rem; /* حجم أكبر للعنوان */
        font-weight: bold; /* نص سميك */
        margin-bottom: 1rem; /* مسافة أسفل العنوان */
    }

    p {
        font-size: 1.25rem; /* حجم متوسط للنص */
        color: #555; /* لون نص أفتح */
    }
</style>

@{
    ViewData["Title"] = "Order Shipped";
}

<div class="center-page">
    <div class="container text-center">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="alert alert-success p-4" role="alert">
                    <h2 class="alert-heading">  ❌ Failed</h2>
                    <p class="mb-0">Payment Has Been Failed</p>
                </div>
            </div>
        </div>
    </div>
</div>
